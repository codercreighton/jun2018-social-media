<div class="col-lg-6">
<h2>Sign in!</h2>
<h3>Not a member? Sign up!</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
<center>
  <div class="col-lg-6">
    <h2>Welcome to Hipster Speak</h2>
    <h3>Log in and see what we are chatting about! You don't want to miss out on the hottest trendiest stuff!</h3>
  </div>
</center>