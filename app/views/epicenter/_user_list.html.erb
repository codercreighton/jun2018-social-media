<div class="row">
	<% @users.each do |user| %>
		<div class="col-lg-6">
			<div class="well profiles-page">
				<center>
					<div>
					<%= image_tag user.avatar.thumb, class: "img-circle" %>
					</div>
					<h5><%=  link_to  user.username, show_user_path(id: user.id) %></h5>
					<p>Name: <%=  link_to  user.name, show_user_path(id: user.id) %></p>
					<p>Home: <%= user.location %></p>
					<p>About: <%= user.bio %></p>
					<p><%= link_to "Following", following_path(id: user.id) %></p>
					<p><%= link_to "Followers", followers_path(id: user.id) %></p>

					<p>
				    <% if current_user.following.include?(user.id) %>
				        <%= link_to "Following", unfollow_path(id: user.id), class: "btn btn-primary unfollow_btn" %>
				    <% else %>
				        <% if current_user.id != user.id %>
					    		<%= link_to "Follow", now_following_path(id: user.id), class: "btn btn-primary" %>
					    	<% end %>	
				  	<% end %>
					</p>
				</center>
			</div>
		</div>
	<% end %>
</div>