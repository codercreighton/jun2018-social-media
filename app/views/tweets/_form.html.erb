<%= form_with(model: tweet, local: true) do |form| %>
  

  <div class="form-group">
    <%= form.text_field :message, placeholder: "What's on your mind?", class: "form-control" %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="actions">
    <%= form.submit "Tweet it!", class: "btn btn-success" %>
  </div>
<% end %>
